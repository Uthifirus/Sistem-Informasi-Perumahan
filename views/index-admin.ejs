<div class="container">
    <% berita.forEach(item=> { %>
        <a href="/detail_berita/<%= item.idberita %>" style="text-decoration: none; color: inherit;">
            <div class="card-body">
                <div class="card-img">
                    <img src="<%= item.imgBerita %> " alt="">
                </div>
                <div class="card-content">
                    <%= item.titleBerita %> 
                </div>
            </div>
        </a>
        <% }) %>
</div>